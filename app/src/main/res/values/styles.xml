<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/background_light</item>
    </style>

    <!-- Text -->
    <style name="YabuText" parent="TextAppearance.AppCompat.Body1">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sawarabi_gothic</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <!-- Title -->
    <style name="YabuTitle" parent="TextAppearance.AppCompat.Title">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sawarabi_gothic</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Reading Text -->
    <style name="YabuText.Reading" parent="YabuText">
        <!-- Customize your theme here. -->
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
    </style>

    <!-- Reading Text -->
    <style name="YabuText.Reading.Title" parent="YabuText.Reading">
        <!-- Customize your theme here. -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
