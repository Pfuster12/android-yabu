<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <!-- Text -->
    <style name="YabuText" parent="TextAppearance.AppCompat.Body1">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sawarabi_gothic</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Title -->
    <style name="YabuTitle" parent="TextAppearance.AppCompat.Title">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sawarabi_gothic</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Reading Text -->
    <style name="YabuText.Reading" parent="YabuText">
        <!-- Customize your theme here. -->
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">2.5</item>
        <item name="android:letterSpacing">0.35</item>
    </style>

    <style name="YabuText.Reading.Japanese" parent="YabuText.Reading">
        <!-- Customize your theme here. -->
        <item name="android:letterSpacing">0.6</item>
    </style>

    <style name="YabuText.Reading.Japanese.Title" parent="YabuText.Reading.Japanese">
        <!-- Customize your theme here. -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="KanjiTokenTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <!-- Customize your theme here. -->
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
    </style>
</resources>
